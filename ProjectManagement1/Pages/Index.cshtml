@page
@model ProjectManagement1.Pages.Projects.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Projects Home</h2>

<p>
    <a asp-page="Create">Create New</a> | <a asp-page="Search">Search</a>
</p>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Project[0].ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project[0].ProjectManager)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project[0].TechLead)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project[0].DueDate)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Project) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectManager)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechLead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a> |
                <a asp-page="./CreateTask" asp-route-id="@item.ID">Task List</a>
            </td>
        </tr>
}
    </tbody>
</table>
